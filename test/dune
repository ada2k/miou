(library
 (name test)
 (modules test)
 (libraries fmt miou unix))

(executable
 (name test_core)
 (modules test_core)
 (libraries threads.posix test unix miou))

(rule
 (copy# ../lib/sync.ml sync.ml))

(executable
 (name test_sync)
 (modules test_sync sync atomic)
 (libraries dscheck test miou))

(rule
 (alias runtest)
 (action
  (setenv
   MIOU_ASSERT
   1
   (setenv
    MIOU_DEBUG
    1
    (run ./test_core.exe)))))

(rule
 (alias runtest)
 (action
  (run ./test_sync.exe)))
